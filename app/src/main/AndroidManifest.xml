<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bulingzhuang.gentcomic">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".base.GentComicApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_crocodile"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_crocodile"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="d0dc341233713ef2a928c021663f012c138e5036" />

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".TestActivity" android:screenOrientation="portrait"/>

        <activity android:name=".activities.ComicIndexActivity" android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.ComicActivity" android:screenOrientation="landscape"/>
    </application>

</manifest>